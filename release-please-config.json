{
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "separate-pull-requests": true,
  "packages": {
    "apps/keycloak-theme": {
      "release-type": "node",
      "package-name": "madrasah-keycloak-theme",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(keycloak-theme): release ${version}",
      "pull-request-header": "Release for Keycloak Theme",
      "component": "keycloak-theme",
      "path": "apps/keycloak-theme"
    },
    "apps/tedris": {
      "release-type": "node",
      "package-name": "tedris",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(tedris): release ${version}",
      "pull-request-header": "Release for Tedris SPA",
      "component": "tedris",
      "path": "apps/tedris"
    }
  }
}
