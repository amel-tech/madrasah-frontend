{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "separate-pull-requests": true,
  "packages": {
    "shared/services": {
      "release-type": "node",
      "package-name": "@madrasah/services",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(services): release ${version}",
      "pull-request-header": "Release for Services",
      "component": "services",
      "path": "shared/services"
    },
    "shared/icons": {
      "release-type": "node",
      "package-name": "@madrasah/icons",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(icons): release ${version}",
      "pull-request-header": "Release for Icons",
      "component": "icons",
      "path": "shared/icons"
    },
    "shared/tokens": {
      "release-type": "node",
      "package-name": "@madrasah/tokens",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(tokens): release ${version}",
      "pull-request-header": "Release for Tokens",
      "component": "tokens",
      "path": "shared/tokens"
    },
    "shared/mocks": {
      "release-type": "node",
      "package-name": "@madrasah/mocks",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(mocks): release ${version}",
      "pull-request-header": "Release for Mocks",
      "component": "mocks",
      "path": "shared/mocks"
    },
    "apps/keycloak-theme": {
      "release-type": "node",
      "package-name": "madrasah-keycloak-theme",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(keycloak-theme): release ${version}",
      "pull-request-header": "Release for Keycloak Theme",
      "component": "keycloak-theme",
      "path": "apps/keycloak-theme",
      "extra-files": ["shared/**"]
    },
    "apps/tedris": {
      "release-type": "node",
      "package-name": "tedris-web",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(tedris-web): release ${version}",
      "pull-request-header": "Release for Tedris Web",
      "component": "tedris-web",
      "path": "apps/tedris",
      "extra-files": ["shared/**"]
    },
    "apps/nizam": {
      "release-type": "node",
      "package-name": "nizam-web",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(nizam-web): release ${version}",
      "pull-request-header": "Release for Nizam Web",
      "component": "nizam-web",
      "path": "apps/nizam",
      "extra-files": ["shared/**"]
    },
    "apps/nazir": {
      "release-type": "node",
      "package-name": "nazir-web",
      "include-component-in-tag": true,
      "pull-request-title-pattern": "chore(nazir-web): release ${version}",
      "pull-request-header": "Release for Nazir Web",
      "component": "nazir-web",
      "path": "apps/nazir",
      "extra-files": ["shared/**"]
    }
  }
}
