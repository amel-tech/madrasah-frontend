{
  "name": "madrasah-frontend",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "check-types": "turbo run check-types",
    "lint:fix": "turbo lint -- --fix",
    "clean": "turbo clean && rm -rf node_modules .turbo dist",
    "prepare": "husky",
    
    "start:mocks": "npm run start:mocks --workspace=@madrasah/services",
    "start:apps": "turbo run start --filter=tedris-web --filter=nizam-web",

    "test:e2e": "concurrently \"npm:start:mocks\" \"npm:start:apps\" \"npm:run:tests\" --kill-others --success first",
    "run:tests": "wait-on http://localhost:5339 http://localhost:3000 http://localhost:3001 && turbo run test:e2e",

    "test:e2e:open:tedris": "concurrently \"npm:start:mocks\" \"npm:start:tedris-web\" \"npm:run:open:tedris-web\" --kill-others",
    "start:tedris": "npm run start --workspace=tedris-web",
    "run:open:tedris": "wait-on http://localhost:5339 http://localhost:3000 && npm run test:e2e:open --workspace=tedris-web",

    "test:e2e:open:nizam": "concurrently \"npm:start:mocks\" \"npm:start:nizam-web\" \"npm:run:open:nizam-web\" --kill-others",
    "start:app2": "npm run start --workspace=nizam-web",
    "run:open:app2": "wait-on http://localhost:5339 http://localhost:3001 && npm run test:e2e:open --workspace=nizam-web"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@turbo/gen": "^2.5.6",
    "cypress": "^13.15.0",
    "esbuild": "^0.21.5",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "npm@11.5.2",
  "dependencies": {
    "react-hook-form": "^7.64.0"
  }
}